<%- include('../parts/header', {req: req}); %>
<div class="container">
    <h4 class="m-3">User list</h4>
    <div class="table-responsive fixed-table-body">
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>login</th>
                <th>Email</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            <% for(var i=0; i<users.length;i++) {%>
            <tr>
                <td><%=users[i].id %></td>
                <td><%=users[i].name %></td>
                <td><%=users[i].login %></td>
                <td><%=users[i].email %></td>
                <td><%=moment(users[i].createdAt).format('DD.MM.YYYY') %></td>

                <td><%=moment(users[i].updatedAt).format('DD.MM.YYYY') %></td>
                <td><div class="container">
                        <div class="dropdown">

                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                Actions
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/user/<%= users[i].id%>">Open</a>
                                <a class="dropdown-item" href="/user/<%= users[i].id%>/update">Edit</a>
                                <a class="dropdown-item" href="/user/<%= users[i].id%>/delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            <%} %>

            </tbody>
        </table>
    </div>

</div>
<%- include('../parts/footer'); %>

